<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.

int[0,1] req1, req2;</declaration>
	<template>
		<name x="5" y="5">TrafficLights</name>
		<parameter>int[0,1] &amp;green_self, int[0,1] &amp;green_other</parameter>
		<declaration>// Place local declarations here.</declaration>
		<location id="id0" x="-17" y="-17">
			<name x="-68" y="-25">green</name>
		</location>
		<location id="id1" x="153" y="-136">
			<name x="143" y="-170">yellow</name>
		</location>
		<location id="id2" x="178" y="-8">
			<name x="204" y="-17">red</name>
		</location>
		<init ref="id1"/>
		<transition>
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="guard" x="34" y="-42">green_other == 0</label>
			<label kind="assignment" x="42" y="0">green_self := 1</label>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id2"/>
		</transition>
		<transition>
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="assignment" x="0" y="-119">green_self := 0</label>
		</transition>
	</template>
	<system>// Place template instantiations here.
P1 = TrafficLights(req1, req2);
P2 = TrafficLights(req2, req1);
// List one or more processes to be composed into a system.
system P1, P2;
    </system>
	<queries>
		<query>
			<formula>E&lt;&gt; (P1.red and P2.red)</formula>
			<comment></comment>
		</query>
		<query>
			<formula>A[] not(P1.green and P2.green)</formula>
			<comment></comment>
		</query>
	</queries>
</nta>
